{% comment %}
  Renders quantitative frontrow widget

  Usage:
  {% render 'frontrow-widget' %}
{% endcomment %}

<frontrow-widget>
  <div class="frontrow-container">
    <p>
      <span class="fr-num-value">210</span>
      <span class="fr-bold">medical providers </span>
      <span class="fr-text" />
      <a href="https://thefrontrowhealth.com/overview/" class="fr-link" target="_blank"> Learn more from our partner </a>
    </p>
  </div>
</frontrow-widget>

{% style %}
  .frontrow-container {
    display: flex;
    padding: 16px;
    align-items: center;
    gap: 8px;

    border-radius: 8px;
    background: #F8FBF9;
    background-blend-mode: multiply;

    flex-direction: column;
    max-width: 100%;

    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .fr-num-value {
    display: inline-flex;
    height: 22px;
    padding: 4px 6px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    flex-shrink: 0;
    font-weight: 700;

    border-radius: 4px;
    border: 1px solid #DAE8DF;
    background: var(--white, #FFF);
    box-shadow: 0px 1px 3px 0px rgba(211, 227, 217, 0.40);
  }

  .fr-text {
    flex: 1 0 0;

    color: #212121;
    font-weight: 400;
    line-height: 24px;
  }

  .fr-text:before {
    content: "recently shared this with their patients, and were not paid to do so! "
  }

  .fr-bold {
    color: #212121;
    font-weight: 700;
    line-height: 24px;
  }

  .fr-link {
    color: #212121;
    font-weight: 400;
    line-height: 24px;
    text-decoration-line: underline;
  }

  @media only screen and (max-width: 768px) {
    .frontrow-container {
      /* may need to adjust this to make content fit on full lines on mobile */
      font-size: 14px;
    }

    .fr-text {
      line-height: normal;
    }

    .fr-text:before {
      content: "recently shared this with their patients, and were not paid to do so! "
    }

    .fr-bold {
      line-height: normal;
    }

    .fr-link {
      align-self: stretch;
      display: block;
      padding-top: 4px;
    }
  }
{% endstyle %}
