    }

    .fr-review-title {
      font-size: 16px;
      line-height: 28px;
    }

    .fr-header>p {
      font-size: 13px;
      max-width: 100%;
    }

    .fr-learn-more>a {
      text-align: center;
    }

    .fr-arrow {
      padding: 8px;
      margin-left: 6px;
    }
  }
