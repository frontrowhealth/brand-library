      display: block;
    }

    .fr-learn-more {
      font-size: 14px;
      line-height: 22px;
    }

    .fr-qual-container {
      padding: 20px;
    }

    .fr-review-container {
      padding: 24px 20px 32px;
    }

    .fr-tag {
