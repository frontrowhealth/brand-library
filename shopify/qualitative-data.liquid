{% style %}
  .frontrow-qual-data {
    display: flex;
    padding: 56px 80px;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    border-radius: 35px;

    background: #DFEFE6;
  }

  .fr-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    align-self: stretch;
    margin-bottom: 8px;
  }

  .fr-title {
    color: #0F1834;
    text-align: center;
    font-size: 32px;
    font-style: normal;
    font-weight: 500;
    line-height: 36px;
    margin-bottom: 0;
  }

  .fr-header > p {
    align-self: stretch;
    color: #414B66;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    margin: 0;
  }

  .quant-data-mobile {
    display: none;
  }

  .fr-pr-bold {
    font-weight: 800;
  }

  .fr-review-container {
    display: flex;
    flex-direction: column;
    padding: 32px 32px 48px;
    align-items: flex-start;
    gap: 32px;
    align-self: stretch;
    border-radius: 16px;
    border: 1px solid #F7F7F7;
    background: #FFF;
  }

  .fr-tag-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
    width: 100%;
  }

  .fr-tags {
    display: flex;
    flex-direction: row;
    gap: 16px;
  }

  .fr-tag {
    display: flex;
    padding: 12px 16px;
    align-items: center;
    gap: 8px;

    border-radius: 8px;

    /* TODO(optional): gray tags -- can be changed to another light brand color */
    background: rgba(98, 110, 147, 0.10);

    /* TODO(optional): font color for icon and text can be changed */
    color: #0F1834;
    text-align: center;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .doctor-details {
    color: #414B66;
    text-align: right;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .doctor-details-mobile {
    display: none;
  }

  .fr-review-title {
    flex: 1 0 0;
    color: #0F1834;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 32px;
  }

  .fr-review-text {
    align-self: stretch;
    color: #0F1834;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 24px;
    margin-top: -8px;
  }

  .fr-learn-more {
    color: #0F1834;
    text-align: center;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 22px;
    margin-top: 8px;
  }

  a.fr-learn-more {
    color: #0F1834;
    font-size: 16px;
    font-style: normal;
    font-weight: 800;
    line-height: 22px;
    text-decoration-line: underline;

    display: inline-block;
  }

  .fr-learn-more > p {
    margin-top: 0;
  }

  @media only screen and (max-width: 768px) {
    .fr-header > p {
      display: none;
    }

    .quant-data-mobile {
      display: block;
      text-align: left;
      line-height: 18px;
      font-size: 12px;
    }

    .quant-data-mobile > p:first-child {
      margin-top: 0;
    }

    .quant-data-mobile > p:last-child {
      margin-bottom: 0;
    }

    .doctor-details {
      display: none;
    }

    .doctor-details-mobile {
      display: block;
      color: #414B66;
      text-align: left;
      font-size: 14px;
      margin-top: -8px;
    }

    .fr-learn-more {
      font-size: 14px;
      line-height: 22px;
    }

    a.fr-learn-more {
      font-size: 14px;
      line-height: 22px;
    }

    .frontrow-qual-data {
      padding: 10px 20px;
    }

    .fr-review-container {
      padding: 16px 16px 24px;
    }

    .fr-tag-row {
      flex-direction: column;
      gap: 16px;
      align-items: flex-start;
    }

    .fr-tag {
      font-size: 11px;
    }

    .fr-review-title {
      font-size: 16px;
      line-height: 28px;
    }
  }
{% endstyle %}


